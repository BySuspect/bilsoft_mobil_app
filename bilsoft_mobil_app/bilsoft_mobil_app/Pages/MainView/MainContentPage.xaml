<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="bilsoft_mobil_app.Pages.MainView.MainContentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:local="clr-namespace:bilsoft_mobil_app.Pages.MainView"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="Ana Sayfa"
    BackgroundImageSource="background.jpg">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="btnToolbarRefesh"
            IconImageSource="toolbar_refesh24px.png"
            Priority="0" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>

        <!--#region Resources-->

        <!--#region Menü Template-->
        <DataTemplate x:Key="MainViewItemsTemplate">
            <StackLayout>
                <Frame
                    Margin="5,10,5,100"
                    BackgroundColor="{Binding CardBackgroundColor}"
                    BorderColor="{Binding BorderColor}"
                    CornerRadius="15"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--#region cari hesaplar - Stok Kartları-->
                        <Frame
                            Grid.Row="0"
                            Grid.Column="0"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaCariHesaplar"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="users64px.png"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Cari Hesaplar"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>

                        <Frame
                            Grid.Row="0"
                            Grid.Column="1"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaStokKartlari"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="dropbox64px.png"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Stok Kartları"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Taksit Takip - Satış Yap-->
                        <Frame
                            Grid.Row="1"
                            Grid.Column="0"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaTaksitTakip"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Source="lookprice64px.png"
                                    TranslationX="2"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Taksit Takip"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>

                        <Frame
                            Grid.Row="1"
                            Grid.Column="1"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaSatisYap"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Scale="1.1"
                                    Source="shop64px.png"
                                    TranslationX="-4"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Satış yap"
                                    TextColor="{Binding TextColor}"
                                    TranslationY="-10"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Çek Senet - Banka-->
                        <Frame
                            Grid.Row="2"
                            Grid.Column="0"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaCekSenet"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Scale="1"
                                    Source="file_dolar64px.png"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Çek Senet"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>

                        <Frame
                            Grid.Row="2"
                            Grid.Column="1"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaBanka"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Scale="1.3"
                                    Source="banka64px.png"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Banka"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                        <!--#endregion-->

                        <!--#region Kasa - Faturalar-->
                        <Frame
                            Grid.Row="3"
                            Grid.Column="0"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaKasa"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Scale="1.1"
                                    Source="kasa64px.png"
                                    TranslationX="-3"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Kasa"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>

                        <Frame
                            Grid.Row="3"
                            Grid.Column="1"
                            xct:TouchEffect.NativeAnimation="true"
                            xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                            xct:TouchEffect.PressedAnimationDuration="500"
                            xct:TouchEffect.PressedOpacity="0.6"
                            xct:TouchEffect.PressedScale="0.98"
                            BackgroundColor="{Binding BackgroundColor}"
                            BorderColor="White"
                            CornerRadius="15">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                            </Frame.GestureRecognizers>
                            <Grid>
                                <Image
                                    x:Name="btnAnaSayfaFaturalar"
                                    BackgroundColor="Transparent"
                                    HorizontalOptions="Center"
                                    Scale="1.1"
                                    Source="fatura64px.png"
                                    TranslationX="-6"
                                    VerticalOptions="Start" />
                                <Label
                                    BackgroundColor="Transparent"
                                    FontAttributes="Bold"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Faturalar"
                                    TextColor="{Binding TextColor}"
                                    VerticalOptions="End" />
                            </Grid>
                        </Frame>
                        <!--#endregion-->
                    </Grid>
                </Frame>
            </StackLayout>
        </DataTemplate>
        <!--#endregion-->

        <!--#region ChartTemplate-->
        <DataTemplate x:Key="DonutChartViewItemsTemplate">
            <StackLayout>
                <Frame
                    Margin="5,10,5,100"
                    BackgroundColor="{Binding CardBackgroundColor}"
                    BorderColor="{Binding BorderColor}"
                    CornerRadius="15"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <!--#region GÜNLÜK Satış Donut Grafik-->
                    <Grid VerticalOptions="Fill">
                        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                            <Label
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Start"
                                TextColor="{Binding TextColor}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Name}" />
                                        <Span
                                            FontSize="12"
                                            Text=" Grafiği"
                                            TextColor="LightGray" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>

                        <charts:ChartView
                            x:Name="GunlukSatisChart"
                            Chart="{Binding ChartView}"
                            HeightRequest="500"
                            IgnorePixelScaling="False"
                            VerticalOptions="Center" />

                        <StackLayout Margin="0,0,0,20" VerticalOptions="End">
                            <Label FontSize="Medium" TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ChartValueName1}" />
                                        <Span Text=": " />
                                        <Span Text="{Binding ChartValue1}" TextColor="{Binding ChartValueColor1}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label FontSize="Medium" TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ChartValueName2}" TextColor="White" />
                                        <Span Text=": " TextColor="white" />
                                        <Span Text="{Binding ChartValue2}" TextColor="{Binding ChartValueColor2}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label FontSize="Medium" TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ChartValueName3}" TextColor="White" />
                                        <Span Text=": " TextColor="white" />
                                        <Span Text="{Binding ChartValue3}" TextColor="{Binding ChartValueColor3}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label FontSize="Medium" TextColor="White">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ChartValueName4}" TextColor="White" />
                                        <Span Text=": " TextColor="white" />
                                        <Span Text="{Binding ChartValue4}" TextColor="{Binding ChartValueColor4}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </Grid>
                </Frame>
            </StackLayout>
        </DataTemplate>
        <!--#endregion-->

        <local:MainPageDataTemplateSelector
            x:Key="MainContentPageViewSelector"
            DonutChartViewItems="{StaticResource DonutChartViewItemsTemplate}"
            MainViewItems="{StaticResource MainViewItemsTemplate}" />
    </ContentPage.Resources>
    <!--#endregion-->

    <!--#endregion-->
    <ContentPage.Content>
        <Grid>

            <!--#region Main Content-->
            <CarouselView
                x:Name="MainPageCarouselView" 
                IndicatorView="{x:Reference MainContentPageViewIndicatorView}"
                IsSwipeEnabled="True"
                ItemTemplate="{StaticResource MainContentPageViewSelector}"
                ItemsSource="{Binding _mainContentPageViewItemsSource}"
                Loop="False"
                PeekAreaInsets="35" />
            <IndicatorView
                x:Name="MainContentPageViewIndicatorView"
                Margin="0,50,0,80"
                HorizontalOptions="FillAndExpand"
                IndicatorColor="White"
                IndicatorsShape="Circle"
                SelectedIndicatorColor="Black"
                VerticalOptions="EndAndExpand" />
            <!--#endregion-->

            <!--#region AltNavigasyon-->

            <!--#region Navigasyon Bar-->
            <Grid TranslationY="45" VerticalOptions="EndAndExpand">
                <Frame BackgroundColor="{Binding NavBarColor}">
                    <Grid>
                        <Frame
                            BackgroundColor="Transparent"
                            CornerRadius="255"
                            HeightRequest="25"
                            HorizontalOptions="StartAndExpand"
                            TranslationX="2"
                            TranslationY="-25"
                            VerticalOptions="EndAndExpand"
                            WidthRequest="25">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btnNavMenu_Tapped" />
                            </Frame.GestureRecognizers>
                            <Image BackgroundColor="Transparent" Source="menu32px.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="btnNavMenu_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                        <Frame
                            BackgroundColor="Transparent"
                            CornerRadius="255"
                            HeightRequest="25"
                            HorizontalOptions="EndAndExpand"
                            TranslationX="-2"
                            TranslationY="-25"
                            VerticalOptions="EndAndExpand"
                            WidthRequest="25">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btnNavSettings_Tapped" />
                            </Frame.GestureRecognizers>
                            <Image
                                x:Name="btnAyarlar"
                                BackgroundColor="Transparent"
                                HorizontalOptions="EndAndExpand"
                                Source="settings32px.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="btnNavSettings_Tapped" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                    </Grid>
                </Frame>
                <Frame
                    BackgroundColor="White"
                    CornerRadius="255"
                    HeightRequest="35"
                    HorizontalOptions="Center"
                    TranslationY="-35"
                    VerticalOptions="Center"
                    WidthRequest="35">
                    <Frame
                        Margin="-16"
                        xct:TouchEffect.NativeAnimation="true"
                        xct:TouchEffect.NativeAnimationColor="#2EFFCCA3"
                        xct:TouchEffect.PressedAnimationDuration="500"
                        xct:TouchEffect.PressedOpacity="0.6"
                        xct:TouchEffect.PressedScale="0.98"
                        BackgroundColor="{Binding NavBarColor}"
                        CornerRadius="255"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="btnNavHome_Tapped" />
                        </Frame.GestureRecognizers>
                        <Image
                            x:Name="btnAnaSayfa"
                            Margin="-10"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Center"
                            Source="home32px.png"
                            VerticalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="btnNavHome_Tapped" />
                            </Image.GestureRecognizers>
                        </Image>
                    </Frame>
                </Frame>
            </Grid>
            <!--#endregion-->

            <!--#region User Menü-->
            <Grid
                x:Name="userSettingsViewBack"
                Margin="0,0,-5,0"
                BackgroundColor="#70000000"
                IsVisible="false">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="btnNavSettingsClose_Tapped" />
                </Grid.GestureRecognizers>
                <Frame
                    BackgroundColor="{Binding NavBarColor}"
                    CornerRadius="255"
                    HeightRequest="15"
                    HorizontalOptions="End"
                    TranslationX="-31"
                    TranslationY="-4"
                    VerticalOptions="EndAndExpand"
                    WidthRequest="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="btnNavSettingsClose_Tapped" />
                    </Frame.GestureRecognizers>
                    <Image BackgroundColor="Transparent" Source="close32px.png" />
                </Frame>
            </Grid>
            <StackLayout
                x:Name="UserPopup"
                Margin="0,0,20,100"
                HorizontalOptions="EndAndExpand"
                IsVisible="false"
                VerticalOptions="EndAndExpand">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="btnNavSettingsClose_Tapped" />
                </StackLayout.GestureRecognizers>

                <!--#region Mail Ayarları-->
                <StackLayout
                    x:Name="UserPopupbtnMailAyarlari"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    TranslationX="300"
                    VerticalOptions="Center">
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnMailAyarlari_Tapped" />
                        </Frame.GestureRecognizers>
                        <Label
                            Margin="0,-10"
                            FontSize="Default"
                            Text="Mail Ayarları"
                            TextColor="white"
                            VerticalOptions="Center"
                            WidthRequest="120" />
                    </Frame>
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="25">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnMailAyarlari_Tapped" />
                        </Frame.GestureRecognizers>
                        <Image
                            Margin="-2"
                            BackgroundColor="Transparent"
                            Source="mailsettings24px.png"
                            TranslationX="2" />
                    </Frame>
                </StackLayout>
                <!--#endregion-->

                <!--#region Yetki Ayarları-->
                <StackLayout
                    x:Name="UserPopupbtnYetkiAyarlari"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    TranslationX="300"
                    VerticalOptions="Center">
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnYetkiAyarlari_Tapped" />
                        </Frame.GestureRecognizers>
                        <Label
                            Margin="0,-10"
                            FontSize="Default"
                            Text="Yetki Ayarları"
                            TextColor="white"
                            VerticalOptions="Center"
                            WidthRequest="120" />
                    </Frame>
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="25">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnYetkiAyarlari_Tapped" />
                        </Frame.GestureRecognizers>
                        <Image
                            Margin="-2"
                            BackgroundColor="Transparent"
                            Source="usersettings32px.png"
                            TranslationX="2" />
                    </Frame>
                </StackLayout>
                <!--#endregion-->

                <!--#region Firma Bilgileri-->
                <StackLayout
                    x:Name="UserPopupbtnFirmaInfo"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    TranslationX="300"
                    VerticalOptions="Center">
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnFirmaInfo_Tapped" />
                        </Frame.GestureRecognizers>
                        <Label
                            Margin="0,-10"
                            FontSize="Default"
                            Text="Firma Bilgileri"
                            TextColor="white"
                            VerticalOptions="Center"
                            WidthRequest="120" />
                    </Frame>
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="256"
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="25">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnFirmaInfo_Tapped" />
                        </Frame.GestureRecognizers>
                        <Image
                            Margin="-2"
                            BackgroundColor="Transparent"
                            Source="info32px.png" />
                    </Frame>
                </StackLayout>
                <!--#endregion-->

                <!--#region Çıkış Yap-->
                <StackLayout
                    x:Name="UserPopupbtnLogout"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    TranslationX="300"
                    VerticalOptions="Center">
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnLogout_Tapped" />
                        </Frame.GestureRecognizers>
                        <Label
                            Margin="0,-10"
                            FontSize="Default"
                            Text="Çıkış Yap"
                            TextColor="white"
                            VerticalOptions="Center"
                            WidthRequest="120" />
                    </Frame>
                    <Frame
                        BackgroundColor="{Binding BackgroundColor}"
                        CornerRadius="255"
                        HeightRequest="25"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="25">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="UserPopupbtnLogout_Tapped" />
                        </Frame.GestureRecognizers>
                        <Image
                            Margin="-2"
                            BackgroundColor="Transparent"
                            Source="logout24px.png"
                            TranslationX="2" />
                    </Frame>
                </StackLayout>
                <!--#endregion-->
            </StackLayout>
            <!--#endregion-->

            <!--#region Hızlı Menü-->
            <Grid
                x:Name="popupMenuBack"
                Margin="0,0,-5,0"
                BackgroundColor="#70000000"
                IsVisible="false">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Tapped="btnPopupMenuClose_Tapped" />
                </Grid.GestureRecognizers>
                <Frame
                    x:Name="btnPopupMenuClose"
                    BackgroundColor="{Binding NavBarColor}"
                    CornerRadius="255"
                    HeightRequest="15"
                    HorizontalOptions="Start"
                    TranslationX="31"
                    TranslationY="-4"
                    VerticalOptions="EndAndExpand"
                    WidthRequest="15">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="btnPopupMenuClose_Tapped" />
                    </Frame.GestureRecognizers>
                    <Image BackgroundColor="Transparent" Source="close32px.png" />
                </Frame>
            </Grid>
            <StackLayout
                x:Name="MenuPopup"
                HorizontalOptions="StartAndExpand"
                IsVisible="false"
                TranslationX="20"
                VerticalOptions="Center">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="btnPopupMenuClose_Tapped" />
                </StackLayout.GestureRecognizers>

                <!--#region Panel-->
                <StackLayout
                    x:Name="PopUpMenuItemPanel"
                    Margin="0,10"
                    HorizontalOptions="Center"
                    Orientation="Horizontal"
                    TranslationX="-300"
                    VerticalOptions="Center">
                    <Frame
