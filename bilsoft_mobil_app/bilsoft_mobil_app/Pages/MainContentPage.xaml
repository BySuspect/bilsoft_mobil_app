<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="bilsoft_mobil_app.Pages.MainContentPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:local="clr-namespace:bilsoft_mobil_app.Helper.Veriler"
    Title="Ana Sayfa"
    BackgroundImageSource="background.jpg">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            x:Name="btnToolbarOpenpopup"
            Clicked="btnToolbarOpenpopup_Clicked"
            IconImageSource="menu32px.png"
            Priority="2" />
        <ToolbarItem
            x:Name="btnToolbarOpenUserPopup"
            Clicked="btnToolbarOpenUserPopup_Clicked"
            IconImageSource="toolbar_user24px.png"
            Priority="1" />
        <ToolbarItem
            x:Name="btnToolbarRefesh"
            Clicked="btnToolbarRefesh_Clicked"
            IconImageSource="toolbar_refesh24px.png"
            Priority="0" />
    </ContentPage.ToolbarItems>

    <Grid>
        <!--#region Main Content-->
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

                <!--#region Menüler-->
                <Frame
                    Margin="15,0,15,15"
                    BackgroundColor="{Binding CardBackgroundColor}"
                    BorderColor="{Binding BorderColor}"
                    CornerRadius="15">
                    <StackLayout>
                        <!--#region cari hesaplar - Stok Kartları-->
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <ImageButton
                                x:Name="btnAnaSayfaCariHesaplar"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaCariHesaplar_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_carihesaplarbtn.png"
                                VerticalOptions="Center" />
                            <ImageButton
                                x:Name="btnAnaSayfaStokKartlari"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaStokKartlari_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_stokkartlarbtn.png"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <!--#endregion-->

                        <!--#region Taksit Takip - Satış Yap-->
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <ImageButton
                                x:Name="btnAnaSayfaTaksitTakip"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaTaksitTakip_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_taksittakipbtn.png"
                                VerticalOptions="Center" />
                            <ImageButton
                                x:Name="btnAnaSayfaSatisYap"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaSatisYap_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_satisyapbtn.png"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <!--#endregion-->

                        <!--#region Çek Senet - Banka-->
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <ImageButton
                                x:Name="btnAnaSayfaCekSenet"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaCekSenet_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_ceksenetbtn.png"
                                VerticalOptions="Center" />
                            <ImageButton
                                x:Name="btnAnaSayfaBanka"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaBanka_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_bankabtn.png"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <!--#endregion-->

                        <!--#region Kasa - Faturalar-->
                        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                            <ImageButton
                                x:Name="btnAnaSayfaKasa"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaKasa_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_kasabtn.png"
                                VerticalOptions="Center" />
                            <ImageButton
                                x:Name="btnAnaSayfaFaturalar"
                                BackgroundColor="#AAEC5E0F"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                Clicked="btnAnaSayfaFaturalar_Clicked"
                                CornerRadius="15"
                                HorizontalOptions="Center"
                                Source="maincontent_menu_faturalarbtn.png"
                                VerticalOptions="Center" />
                        </StackLayout>
                        <!--#endregion-->
                    </StackLayout>
                </Frame>
                <!--#endregion-->

                <!--#region Chartlar-->
                <Grid>
                    <StackLayout>
                        <!--#region GÜNLÜK Satış Donut Grafik-->
                        <Frame
                            Margin="20,5,20,0"
                            Padding="120,20,120,25"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            BorderColor="{Binding _borderColor}"
                            CornerRadius="15">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                    <Label
                                        Padding="-95,0"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        TextColor="White"
                                        WidthRequest="100">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="GÜNLÜK Satış" />
                                                <Span
                                                    FontSize="15"
                                                    Text=" Grafiği"
                                                    TextColor="LightGray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <forms:ChartView
                                    x:Name="GunlukSatisChart"
                                    Margin="-90,-40,-90,-20"
                                    HeightRequest="400"
                                    IgnorePixelScaling="False"
                                    WidthRequest="400" />

                                <StackLayout
                                    HorizontalOptions="CenterAndExpand"
                                    TranslationX="-90"
                                    VerticalOptions="Center">
                                    <StackLayout Orientation="Horizontal">
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding KrediKartiColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Kredi Kartı"
                                                    TextColor="White"
                                                    TranslationX="-27" />
                                                <Label
                                                    x:Name="lblGunlukSatisKredi"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding NakitColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Nakit"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukSatisNakit"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding AcikHesapColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    Padding="-1,0,-5,0"
                                                    FontSize="Body"
                                                    Text="Açık Hesap"
                                                    TextColor="White"
                                                    TranslationX="-30" />
                                                <Label
                                                    x:Name="lblGunlukSatisAcikHesap"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region GÜNLÜK ALIŞ Donut Grafik-->
                        <Frame
                            Margin="20,20,20,0"
                            Padding="120,20,120,25"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                    <Label
                                        Padding="-95,0"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        TextColor="White"
                                        WidthRequest="100">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="GÜNLÜK ALIŞ" />
                                                <Span
                                                    FontSize="15"
                                                    Text=" Grafiği"
                                                    TextColor="LightGray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <forms:ChartView
                                    x:Name="GunlukAlisChart"
                                    Margin="-90,-40,-90,-20"
                                    HeightRequest="400"
                                    IgnorePixelScaling="False"
                                    WidthRequest="400" />

                                <StackLayout
                                    HorizontalOptions="CenterAndExpand"
                                    TranslationX="-90"
                                    VerticalOptions="Center">
                                    <StackLayout Orientation="Horizontal">
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding KrediKartiColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Kredi Kartı"
                                                    TextColor="White"
                                                    TranslationX="-27" />
                                                <Label
                                                    x:Name="lblGunlukAlisKredi"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding NakitColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Nakit"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukAlisNakit"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding AcikHesapColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Açık Hesap"
                                                    TextColor="White"
                                                    TranslationX="-30" />
                                                <Label
                                                    x:Name="lblGunlukAlisAcikHesap"
                                                    Padding="-1,0,-5,0"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region GÜNLÜK TAHSİLAT Donut Grafik-->
                        <Frame
                            Margin="20,20,20,0"
                            Padding="120,20,120,25"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                    <Label
                                        Padding="-95,0"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        TextColor="White"
                                        WidthRequest="100">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="GÜNLÜK TAHSİLAT" />
                                                <Span
                                                    FontSize="15"
                                                    Text=" Grafiği"
                                                    TextColor="LightGray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <forms:ChartView
                                    x:Name="GunlukTahsilatChart"
                                    Margin="-90,-40,-90,-20"
                                    HeightRequest="400"
                                    IgnorePixelScaling="False"
                                    WidthRequest="400" />

                                <StackLayout
                                    HorizontalOptions="CenterAndExpand"
                                    TranslationX="-90"
                                    VerticalOptions="Center">
                                    <StackLayout Orientation="Horizontal">
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding KrediKartiColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Kredi Kartı"
                                                    TextColor="White"
                                                    TranslationX="-25" />
                                                <Label
                                                    x:Name="lblGunlukTahsilatKredi"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding NakitColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Nakit"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukTahsilatNakit"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding CekColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Çek"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukTahsilatCek"
                                                    Padding="-1,0,-5,0"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region GÜNLÜK ÖDEME Donut Grafik-->
                        <Frame
                            Margin="20,20,20,0"
                            Padding="120,20,120,25"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
                                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                    <Label
                                        Padding="-95,0"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        TextColor="White"
                                        WidthRequest="100">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="GÜNLÜK ÖDEME" />
                                                <Span
                                                    FontSize="15"
                                                    Text=" Grafiği"
                                                    TextColor="LightGray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </StackLayout>

                                <forms:ChartView
                                    x:Name="GunlukOdemeChart"
                                    Margin="-90,-40,-90,-20"
                                    HeightRequest="400"
                                    IgnorePixelScaling="False"
                                    WidthRequest="400" />

                                <StackLayout
                                    HorizontalOptions="CenterAndExpand"
                                    TranslationX="-90"
                                    VerticalOptions="Center">
                                    <StackLayout Orientation="Horizontal">
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding KrediKartiColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Kredi Kartı"
                                                    TextColor="White"
                                                    TranslationX="-25" />
                                                <Label
                                                    x:Name="lblGunlukOdemeKredi"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding NakitColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Nakit"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukOdemeNakit"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <BoxView
                                                CornerRadius="25"
                                                HeightRequest="75"
                                                WidthRequest="100"
                                                Color="{Binding CekColor}" />
                                            <StackLayout TranslationX="32.5" TranslationY="5">
                                                <Label
                                                    FontSize="Body"
                                                    Text="Çek"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                                <Label
                                                    x:Name="lblGunlukOdemeCek"
                                                    FontSize="Caption"
                                                    Text="1.179,00 TL"
                                                    TextColor="White"
                                                    TranslationX="-24" />
                                            </StackLayout>
                                        </AbsoluteLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region 7 Günlük Satış Grafik-->
                        <Frame
                            Margin="20,20,20,5"
                            Padding="10,10,10,15"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15">
                            <StackLayout HeightRequest="450">
                                <StackLayout Margin="20,10,20,10">
                                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                        <Label
                                            Padding="-5,0"
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            TextColor="White"
                                            WidthRequest="300">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="7 GÜNLÜK SATIŞ" />
                                                    <Span
                                                        FontSize="15"
                                                        Text=" Grafiği"
                                                        TextColor="LightGray" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>

                                    <forms:ChartView
                                        x:Name="_7GunlukSatisGraph"
                                        HeightRequest="400"
                                        IgnorePixelScaling="False"
                                        WidthRequest="400" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region 7 Günlük Vadesi Gelen Grafik-->
                        <Frame
                            Margin="20,20,20,5"
                            Padding="10,10,10,15"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15">
                            <StackLayout HeightRequest="550">
                                <StackLayout Margin="20,10,20,10">
                                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                        <Label
                                            Padding="-5,0"
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            TextColor="White"
                                            WidthRequest="300">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="7 GÜNLÜK VADESİ GELECEK İŞLEMLER" />
                                                    <Span
                                                        FontSize="15"
                                                        Text=" Tahsilat-Ödemeler Grafiği"
                                                        TextColor="LightGray" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>

                                    <forms:ChartView
                                        x:Name="_7GunlukVadeGelenGraph"
                                        HeightRequest="400"
                                        IgnorePixelScaling="False"
                                        WidthRequest="400" />

                                    <StackLayout
                                        HorizontalOptions="CenterAndExpand"
                                        TranslationX="0"
                                        VerticalOptions="CenterAndExpand">
                                        <StackLayout Padding="0,0,0,20" Orientation="Horizontal">
                                            <AbsoluteLayout>
                                                <BoxView
                                                    CornerRadius="25"
                                                    HeightRequest="50"
                                                    WidthRequest="150"
                                                    Color="{Binding _7GunVadeTahsilatColor}" />
                                                <StackLayout TranslationX="37" TranslationY="10">
                                                    <Label
                                                        FontSize="Body"
                                                        Text="Günlük Tahsilat"
                                                        TextColor="{Binding TextColorKoyu}"
                                                        TranslationX="-15"
                                                        TranslationY="3" />
                                                </StackLayout>
                                            </AbsoluteLayout>
                                            <AbsoluteLayout>
                                                <BoxView
                                                    CornerRadius="25"
                                                    HeightRequest="50"
                                                    WidthRequest="150"
                                                    Color="{Binding _7GunVadeOdemeColor}" />
                                                <StackLayout TranslationX="37" TranslationY="10">
                                                    <Label
                                                        FontSize="Body"
                                                        Text="Günlük Ödeme"
                                                        TextColor="{Binding TextColorKoyu}"
                                                        TranslationX="-15"
                                                        TranslationY="3" />
                                                </StackLayout>
                                            </AbsoluteLayout>
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <!--#endregion-->

                        <!--#region 7 Günlük Banka Haraket Grafik-->
                        <Frame
                            Margin="20,0,20,0"
                            BackgroundColor="{Binding CardBackgroundColor}"
                            CornerRadius="15"
                            HeightRequest="570">
                            <StackLayout>
                                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Vertical">
                                    <Label
                                        Margin="-10,10,10,0"
                                        FontAttributes="Bold"
                                        FontSize="20"
                                        HorizontalOptions="Center"
                                        TextColor="White"
                                        WidthRequest="300">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="7 GÜNLÜK BANKA HARAKETLERİ" />
                                                <Span
                                                    FontSize="15"
                                                    Text=" Tümü"
                                                    TextColor="LightGray" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>

                                    <Picker
                                        x:Name="_7gunlukBankaHaraketPicker"
                                        Title="Banka Listesi"
                                        HorizontalOptions="Center"
                                        SelectedIndexChanged="_7gunlukBankaHaraketPicker_SelectedIndexChanged"
                                        TextColor="White"
                                        TitleColor="White" />
                                </StackLayout>

                                <forms:ChartView
                                    x:Name="_7GunlukBankaHaraketGraph"
                                    HeightRequest="400"
                                    IgnorePixelScaling="False"
                                    WidthRequest="400" />

                                <StackLayout
                                    HorizontalOptions="CenterAndExpand"
                                    TranslationX="0"
                                    VerticalOptions="Center">
                                    <StackLayout Padding="0,0,0,20" Orientation="Horizontal">
                                        <AbsoluteLayout>
                                            <Button
                                                x:Name="btn7GunBankaGiris"
                                                Margin="0,0,0,20"
                                                BackgroundColor="{Binding _BankaHaraketGirisColor}"
                                                Clicked="btn7GunBankaGiris_Clicked"
                                                CornerRadius="25"
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                HeightRequest="50"
                                                Text="Giriş"
                                                TextColor="White"
                                                WidthRequest="70" />
                                        </AbsoluteLayout>
                                        <AbsoluteLayout>
                                            <Button
                                                x:Name="btn7GunBankaCikis"
                                                Margin="0,0,0,20"
                                                BackgroundColor="{Binding _BankaHaraketCikisColor}"
                                                Clicked="btn7GunBankaCikis_Clicked"
                                                CornerRadius="25"
                                                FontAttributes="Bold"
                                                FontSize="15"
                                                HeightRequest="50"
                                                Text="Çıkış"
                                                TextColor="White"
                                                WidthRequest="70" />
                                        </AbsoluteLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
