<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="bilsoft_mobil_app.TestPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customitems="clr-namespace:bilsoft_mobil_app.CustomItems"
    xmlns:local="clr-namespace:bilsoft_mobil_app.Pages.Ajanda"
    BackgroundImageSource="background.jpg">

    <Grid>
        <Frame
            Margin="0,10,0,10"
            BackgroundColor="{Binding BackgroundColor}"
            BorderColor="{Binding BorderColor}"
            CornerRadius="15">
            <ListView HasUnevenRows="True">
                <ListView.Header>
                    <StackLayout Margin="0,5,0,10">
                        <!--  Header  -->
                        <Label
                            FontSize="25"
                            HorizontalOptions="Start"
                            Text="Notlar"
                            TextColor="{Binding TextColor}"
                            VerticalTextAlignment="Start" />

                        <Frame
                            BackgroundColor="Transparent"
                            BorderColor="{Binding BorderColor}"
                            CornerRadius="15"
                            HeightRequest="50">
                            <Grid>
                                <Label
                                    x:Name="lblNotLength"
                                    HorizontalOptions="End"
                                    Text="250/0"
                                    VerticalOptions="End" />
                                <customitems:BorderlessEditor
                                    x:Name="edtNot"
                                    Margin="-15"
                                    TextChanged="edtNot_TextChanged"
                                    TextColor="White" />
                            </Grid>
                        </Frame>
                        <Button
                            x:Name="btnKaydet"
                            BackgroundColor="Transparent"
                            BorderColor="{Binding BorderColor}"
                            BorderWidth="1"
                            Clicked="btnKaydet_Clicked"
                            CornerRadius="15"
                            FontSize="Body"
                            HorizontalOptions="End"
                            Text="Kaydet"
                            TextColor="{Binding TextColor}" />
                    </StackLayout>
                </ListView.Header>

                <ListView.ItemsSource>
                    <x:Array Type="{x:Type local:AjandaNotVeriler}">
                        <local:AjandaNotVeriler
                            ajandaId="1"
                            btnid="btn1"
                            id="1"
                            notlar="test" />
                        <local:AjandaNotVeriler
                            ajandaId="2"
                            btnid="btn2"
                            id="2"
                            notlar="awwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww" />
                        <local:AjandaNotVeriler
                            ajandaId="3"
                            btnid="btn3"
                            id="3"
                            notlar="aedsnjajaejajweajaejawjaj" />
                    </x:Array>
                </ListView.ItemsSource>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                BackgroundColor="Transparent"
                                BorderColor="{Binding BorderColor}"
                                CornerRadius="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        FontSize="Body"
                                        Text="{Binding notlar}"
                                        TextColor="{Binding TextColor}" />
                                    <Button
                                        Grid.Column="1"
                                        AutomationId="{Binding btnid}"
                                        BackgroundColor="Transparent"
                                        BorderColor="{Binding BorderColor}"
                                        BorderWidth="1"
                                        CornerRadius="15"
                                        FontSize="Body"
                                        HorizontalOptions="EndAndExpand"
                                        Text="Sil"
                                        TextColor="{Binding TextColor}" />
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Frame>
        <Grid
            x:Name="Loodinglayout"
            BackgroundColor="#77767676"
            IsVisible="false">
            <Frame
                BackgroundColor="#77767676"
                CornerRadius="15"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand">
                <StackLayout
                    Padding="50"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <ActivityIndicator
                        x:Name="LoodingActivity"
                        HorizontalOptions="Center"
                        IsRunning="False"
                        VerticalOptions="Center"
                        Color="White" />
                    <Label
                        Margin="0,10,0,0"
                        FontSize="20"
                        Text="Yükleniyor..."
                        TextColor="White" />
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>